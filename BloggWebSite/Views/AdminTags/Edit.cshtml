@model BloggWebSite.Models.ViewModels.EditTagRequest
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>EDIT TAGS- Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-control">Id</label>
                <input type="text" class="form-control" id="id" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-control">Name</label>
                <input type="text" class="form-control" id="Name" asp-for="Name" />
            </div>


            <div class="mb-3">
                <label class="form-control">DisplayName</label>
                <input type="text" class="form-control" id="DisplayName" asp-for="DisplayName" />
            </div>

            <div class="mb-3">
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <button type="submit" class="btn btn-danger ms-2"
                            asp-area="" asp-controller="AdminTags" asp-action="Delete">
                        Delete
                    </button>
                </div>


            </div>

        </form>
    }
    else
    {
        <p> Tag Not Found</p>
    }

</div>