@model List<BloggWebSite.Models.Domain.Tag>   
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>SHOW ALL TAGS- Admin Functionality</h1>
    </div>
</div>


<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>DisplayName</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td>
                            <a asp-area="" asp-controller="AdminTags" asp-action="Edit" class="btn btn-primary"
                            asp-route-id="@tag.Id">Edit</a>

                </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>NO TAGS FOUND</h3>
    }

</div>